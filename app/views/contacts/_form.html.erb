<h3>Add a Contact at this Company</h3>

<%= form_for [ @company, @contact ] do |f| %>
  <%= render partial: "shared/errors", locals: { target: @contact } %>

  <p>
    <%= f.label :full_name %><br/>
    <%= f.text_field :full_name %>
  </p>
  <p>
    <%= f.label :position %><br/>
    <%= f.text_area :position %>
  </p>
  <p>
    <%= f.label :email %><br/>
    <%= f.text_area :email %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
