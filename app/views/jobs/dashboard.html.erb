<h2 align="center">Jobs Dashboard</h2>

<div class="panel panel-default">
  <h4 class="panel-heading">Top Companies by Interest</h4>
  <table class="table">
    <tr>
      <th>Company</th>
      <th>Level of Interest</th>
    </tr>
    <tr>
      <% @top_companies_by_interest.each do |company, interest| %>
      <td><%= company %></td>
      <td><%= interest.keys.join %></td>
    </tr>
    <% end %>
  </table>

  <hr>

  <h4 class="panel-heading">Top Companies by Level of Interest</h4>
  <table class="table">
    <tr>
      <th>Level of Interest</th>
      <th>Number of Jobs</th>
    </tr>
    <tr>
      <% @jobs_by_level_of_interest.each do |interest, count| %>
      <td><%= interest %></td>
      <td><%= count %></td>
    </tr>
    <% end %>
  </table>

  <hr>
  <h4 class="panel-heading">Number of Jobs by Location</h4>
  <table class="table">
    <tr>
      <th>Location</th>
      <th>Number of Jobs</th>
    </tr>
    <tr>
      <% @job_locations.each do |location, count| %>
      <td><%= link_to "#{location}", jobs_path(location: location) %></td>
      <td><%= count %></td>
    </tr>
    <% end %>
  </table>

</div>
