<div class="jumbotron">
    <div class="container-fluid">
      <h1 class="display-3"> Title: <%= @job.title %></h1>
      <p class="lead"> <strong>Description:</strong> <%= @job.description %></p>

      <p><strong>Level of Interest:</strong> <%= @job.level_of_interest %></p>

      <p><strong>City:</strong> <%= @job.city %></p>

      <p><strong>Category:</strong> <%= @job.category.title  %></p>

      <p><%= link_to @job.company.name, company_path(@job.company),
          class: "btn btn-lg btn-success" %></p>

    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h4>Comments (<%= @job.comments.size %>)</h4>
        <%= render partial: 'jobs/comment', collection: @job.comments.reverse %>
      </div>

    <div class="col-md-4">
      <%= render partial: 'comments/form' %>
    </div>
  </div>
</div>
